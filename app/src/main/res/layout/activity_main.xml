<?xml version="1.0" encoding="utf-8"?>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_centerInParent="true"
        tools:context="cpen391.tipsycalculator.MainActivity">
         <TextView
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text = "Total"
        />
        <TextView
            android:id="@+id/totalPrice"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text = "0"
            />
        <TextView
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text = "Per Person"
        />
        <TextView
            android:id="@+id/totalPricePerPerson"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text = "0"
            />
        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_margin="15dp" />

        <Button
            style="@style/ButtonStyle"
            android:text="1"
            android:onClick="numberPressed"
            />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="2" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="3" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="4" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="5" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="6" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="7" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="8" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:text="9" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0" />
        <Button
            style="@style/ButtonStyle"
            android:onClick="numberPressed"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/decimal"
            android:text="." />
        <Button
            android:onClick="resetPressed"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:text="Reset" />
        <SeekBar
            android:layout_width="wrap_content"
            android:layout_below="@+id/gridLayout"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tipPercentageSeek"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tipPercentage"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text = "0"
            />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:progress="1"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:id="@+id/numberOfPeopleSeek"
            android:layout_alignRight="@+id/tipPercentageSeek"
            android:layout_alignEnd="@+id/tipPercentageSeek" />
        <TextView
            android:id="@+id/numberOfPeople"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text = "1"
            />


    </GridLayout>
